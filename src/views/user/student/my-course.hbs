<div class="main container-fluid">
    <div class="row">
        <div class="col-md-2 text-center">
            {{> profile-navbar}}
        </div>
        <div class="col-md-10 text-center">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col"></th>
                    <th scope="col">Tên khóa học</th>
                    <th scope="col">Tiến độ</th>
                    <th scope="col">Kết quả</th>
                    <th scope="col">Ngày đăng ký</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each student.courses}}
                        <tr>
                            <th scope="row">{{increaseIndex @index}}</th>
                            <td>{{this.courseName}}</td>
                            <td>{{this.progress}}</td>
                            <td>{{this.result}}</td>
                            <td>{{formatDateTime this.registeredDate}}</td>
                            <td>
                                <a class="btn btn-blue" href="/courses/{{this.courseId}}/lessons">Tiếp tục học</a>
                            </td>
                        </tr>
                    {{else}}
                    <h2>Bạn chưa đăng ký khóa học nào!</h2>
                    {{/each}}
                </tbody>
            </table>
        </div>

